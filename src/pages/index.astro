---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
pagefind: false
let errorMessage = '';

// Handle form submission
if (Astro.request.method === 'POST') {
  try {
    const data = await Astro.request.formData();
    const username = data.get('username');
    const password = data.get('password');

    if (username === 'swelltech' && password === 'swellawesome') {
      return Astro.redirect('/docs');
    } else {
      errorMessage = 'Invalid username or password';
    }
  } catch (error) {
    errorMessage = 'An error occurred during login';
  }
}
---

<StarlightPage frontmatter={{ title: 'Login' }} sidebar={[]} hasSidebar>
  <div class="login-container">
    <div class="login-box">
      <img src="/Swell Wordmark Purplepng.png" alt="Swell Logo" class="logo" />
      <h2>Support Team Documentation</h2>
      
      {errorMessage && <p class="error">{errorMessage}</p>}
      
      <form method="POST">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" required />
        </div>
        
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required />
        </div>
        
        <button type="submit">Login</button>
      </form>
    </div>
  </div>
</StarlightPage>

<style>
  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
  }

  .login-box {
    background: var(--sl-color-gray-6);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 8px;
    padding: 2rem;
    width: 100%;
    max-width: 400px;
    text-align: center;
  }

  .logo {
    max-width: 200px;
    margin-bottom: 1rem;
  }

  h2 {
    color: var(--sl-color-white);
    margin-bottom: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
    text-align: left;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--sl-color-gray-2);
  }

  input {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 4px;
    background: var(--sl-color-black);
    color: var(--sl-color-white);
  }

  button {
    background: var(--sl-color-text-accent);
    color: var(--sl-color-black);
    border: none;
    border-radius: 4px;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    cursor: pointer;
    width: 100%;
  }

  button:hover {
    opacity: 0.9;
  }

  .error {
    color: var(--sl-color-red);
    margin-bottom: 1rem;
  }
</style>
